generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  administrator
  konselor
  konseli
}

enum Gender {
  male
  female
}

model Account {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  email          String    @unique
  password       String
  role           Role      @default(konseli)
  fullname       String
  birthday       DateTime? @db.Date
  gender         Gender?
  address        String?   @db.Text
  districtId     Int?
  education      String?
  profession     String?
  profilePicture String?
  District       District? @relation(fields: [districtId], references: [id])
}

model Province {
  id      Int        @id
  name    String
  distric District[]
}

model District {
  id         Int       @id
  provinceId Int
  name       String
  Province   Province  @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  Account    Account[]
}
